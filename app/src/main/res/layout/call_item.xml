<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@android:color/white" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/darkGrey"
            android:gravity="center"
            android:layout_margin="12dp"
            tools:text="20 mars"
            android:id="@+id/call_date"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/call_date"
            android:padding="20dp"
            android:background="@drawable/background_feed">

        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/icon_call"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:srcCompat="@drawable/ic_inbound"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="12dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/icon_call"
                tools:text="+6 78 67 88 66"
                android:id="@+id/call_number"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/call_number"
                app:layout_constraintTop_toTopOf="@id/call_number"
                app:layout_constraintBottom_toBottomOf="@id/call_number"
                android:id="@+id/action"
                android:layout_marginStart="6dp"
                tools:text="left a voicemail"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/icon_call"
                android:id="@+id/via"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintTop_toBottomOf="@id/call_number"
                tools:text="via My number at 21h45"
                android:textColor="@color/darkGrey"/>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>